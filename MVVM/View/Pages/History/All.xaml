      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1000"
      Title="All"
      DataContext="{StaticResource MainViewModel}"
      >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" VerticalAlignment="Center">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition/>
