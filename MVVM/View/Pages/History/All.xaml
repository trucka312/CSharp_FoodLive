                </WrapPanel>
                <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Height="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="200" />
                    </Grid.ColumnDefinitions>
                    <WrapPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <ui:Button Grid.Column="1" Command="{Binding RefreshBillCommand}" Icon="ArrowClockwise12" Content="Tải lại" Background="Transparent" Foreground="#000" FontSize="12" FontWeight="SemiBold" Height="{Binding Height, ElementName=search_tb}" Padding="20 8" HorizontalAlignment="Right" PressedBorderBrush="Transparent" PressedForeground="#FF7A00" MouseOverBackground="LightGray" BorderThickness="0">
                        </ui:Button>
                    </WrapPanel>
                </Grid>
            </Grid>
            <Separator Background="LightGray" />

        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <ListView Grid.Row="1" ItemsSource="{Binding ListHoaDon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ListViewItem>
                            <StackPanel Width="auto" Height="auto" HorizontalAlignment="Left">
                                <TextBlock Grid.Row="0" VerticalAlignment="Bottom" FontWeight="Bold" Text="{Binding NgayLapHoaDon}" />
