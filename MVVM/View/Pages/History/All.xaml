                                    <Grid >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="25"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <ui:SymbolIcon Grid.Column="0" HorizontalAlignment="Left" HorizontalContentAlignment="Left"></ui:SymbolIcon>
                                        <TextBlock Grid.Column="1" Foreground="Blue" Text="{Binding TriGia, Converter={StaticResource MoneyConverter}}"></TextBlock>
                                    </Grid>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition Width="10"></ColumnDefinition>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding MaHoaDon}"></TextBlock>
                                        <Separator Grid.Column="1" HorizontalAlignment="Center"></Separator>
                                        <TextBlock Grid.Column="2" Text="{Binding BanAn.TenBanAn}"></TextBlock>

                                    </Grid>

                                </StackPanel>
                                <TextBlock>
                                    <TextBlock Text="{Binding NgayLapHoaDon}" />
                                    - <TextBlock Text="{Binding ThoiGianThanhToan}" />
